{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "skipLibCheck": true,
        /* Bundler mode */
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "isolatedModules": false,
        "noEmit": true,
        "jsx": "preserve",
        /* Linting */
        "strict": true,
        "noUnusedLocals": false,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "types": [
            "element-plus/global"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "electron"
    ],
    "paths": {
        "@/*": [
            "src/*"
        ],
        "~/*": [
            "public/*"
        ]
    },
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ],
    "exclude": [
        "node_modules"
    ],
    "ts-node": {
        "esm": true
    }
}